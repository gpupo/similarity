# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
indent_style = space
indent_size = 4

# tabs 2 spaces for makefiles
[{Makefike,*.mk}]
indent_style = tabs

[*.{js,py,yml,yaml,json,css,scss,xml,html,sh}]
indent_size = 2
indent_style = space

[*.md]
trim_trailing_whitespace = false
indent_style = tab

[vendor/**]
trim_trailing_whitespace = false
insert_final_newline = false
